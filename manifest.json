{
  "manifest_version": 3,
  "name": "WhatsApp Web Message Extractor",
  "version": "1.0.0",
  "description": "Extract latest messages from WhatsApp Web chats and reply directly from the extension popup.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "WhatsApp Message Extractor"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
